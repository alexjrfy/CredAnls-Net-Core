@section scripts {
<script>
$('.AnaliseAbas a').on('click', function (e) {
  e.preventDefault()
  $(this).tab('show');
  var valor = $(this).data('aba');
  

  if(valor=="tudo"){  
    $('.abas').addClass('active');
  }else{
    $('.abas').removeClass('active');
    $('.'+valor).addClass('active');
  }
  
});
</script>
}